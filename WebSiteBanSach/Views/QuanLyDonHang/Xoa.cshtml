            @Html.DisplayFor(model => model.MaKH)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:1px">
            <input type="submit" value="Xóa" class="btn btn-default" style="background-color:red" /> |
            <a href="@Url.Action("Index","QuanLyDonHang")" class="btn btn-default" style="background-color:plum ">Trở Về</a>
