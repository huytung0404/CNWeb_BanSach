@model WebSiteBanSach.Models.NhaXuatBan

@{
    ViewBag.Title = "Xoa";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<strong class="card-title" style="margin-left:20px; font-size:30px; color:aqua;">Bạn có thật sự muốn xóa nhà xuất bản này?</strong>


<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaNXB)
        </dt>

        <dd>
            <span style="font-size:15pt;margin-left:5px;color:blue">@Model.MaNXB</span>

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TenNXB)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNXB)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DienThoai)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:1px">
            <input type="submit" value="Xóa" class="btn btn-default" style="background-color:red" /> |
            <a href="@Url.Action("Index","QuanLyNhaXuatBan")" class="btn btn-default" style="background-color:plum ">Trở Về</a>
        </div>
    }
</div>
