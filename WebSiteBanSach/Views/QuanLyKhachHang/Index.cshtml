@model PagedList.PagedList<WebSiteBanSach.Models.KhachHang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title" style="margin-left:20px; font-size:30px; color:aqua;">Khách Hàng</strong>
                    <div class="search-bar" style="float:right">
                        @using (Html.BeginForm("Index", "KhachHang", FormMethod.Get))
                        {
                            @Html.TextBox("SearchText", null, new { @placeholder = "Nhập Mã KH hoặc Tên KH nhé :3 !!!" })
                            <input type="submit" value="Tìm Kiếm" class="search-button" style=" border-color:red; background-color:yellow ; margin-right:100px " />
                            <a href="@Url.Action("ThemMoi","QuanLyKhachHang")" class="btn btn-default" style="float:right; border-color:red; background-color:cyan"> <i class="fa fa-dot-circle-o">Thêm Mới </i></a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>
                                Mã Khách Hàng
                            </th>
                            <th>
                                Tên Khách Hàng
                            </th>
                            <th>
                                Ngày Sinh
                            </th>
                            <th>
                                Giới Tính
                            </th>
                            <th>
                                Điện Thoại
                            </th>
                            <th>
                                Tài Khoản
                            </th>
                            <th>
                                Mật Khẩu
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Địa Chỉ
                            </th>


                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaKH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgaySinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GioiTinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DienThoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaiKhoan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MatKhau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>
                            <td>
                                <a href=" @Url.Action("ChinhSua", "QuanLyKhachHang", new { @MaKH = item.MaKH })" name='test' class="btn btn-primary btn-sm" style="float:right; background-color:red; width:44px">  Sửa </a>
                                <a href="@Url.Action("HienThi", "QuanLyKhachHang", new { @MaKH = item.MaKH })" name='test' class="btn btn-primary btn-sm" style="float:right ; background-color:forestgreen; width:44px">  Chi Tiết </a>
                                <a href=" @Url.Action("Xoa", "QuanLyKhachHang", new { @MaKH = item.MaKH })" name='test' class="btn btn-primary btn-sm" value='Xoa' style="float:right; background-color:rebeccapurple; width:44px">  Xóa  </a>
                            </td>
                        </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@* Tạo link liên kết các trang*@
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
                    <div class="MenuTrang">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                    </div>
                    <style>

                        .MenuTrang ul {
                            list-style-type: none;
                            margin: 0;
                            padding: 0;
                            overflow: hidden; /*background-color: #333;*/
                        }

                        .MenuTrang li {
                            display: inline;
                            float: left;
                            border-right: 1px solid #bbb;
                        }

                            .MenuTrang li:last-child {
                                border-right: none;
                            }

                            .MenuTrang li a {
                                display: block;
                                color: Black;
                                text-align: center;
                                padding: 14px 16px;
                                text-decoration: none;
                            }

                                .MenuTrang li a:hover:not(.MenuTrang) {
                                    background-color: #4CAF50;
                                }

                        .MenuTrang {
                            background-color: cornflowerblue;
                        }
                    </style>
