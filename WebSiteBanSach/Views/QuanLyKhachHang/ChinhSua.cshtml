@model WebSiteBanSach.Models.KhachHang

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <strong class="card-title" style="margin-left:20px; font-size:30px; color:aqua;">CHỈNH SỬA THÔNG TIN KHÁCH HÀNG</strong>
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.MaKH, new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            <span style="font-size:15pt;margin-left:5px;color:blue">@Model.MaKH</span>
            @Html.Hidden("MaKH", Model.MaKH)
        </div>
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HoTen)
            @Html.ValidationMessageFor(model => model.HoTen)
        </div>
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NgaySinh)
            @Html.ValidationMessageFor(model => model.NgaySinh)
        </div>
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
