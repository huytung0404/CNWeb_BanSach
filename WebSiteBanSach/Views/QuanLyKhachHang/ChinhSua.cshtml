        @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MatKhau)
            @Html.ValidationMessageFor(model => model.MatKhau)
        </div>
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi)
            @Html.ValidationMessageFor(model => model.DiaChi)
        </div>
    </div>
    <br />



    

    <div class="form-actions no-color">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-default" style="background-color:greenyellow" /> |


            <a href="@Url.Action("HienThi", "QuanLyKhachHang", new { @MaKH = Model.MaKH })" class="btn btn-default" style="background-color:forestgreen; width:64px">  Chi Tiết  </a> |

            <a href="@Url.Action("Index","QuanLyKhachHang")" class="btn btn-default" style="background-color:plum ">Quay Lại</a>

        </div>
    </div>
</div>
}


